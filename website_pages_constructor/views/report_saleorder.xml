<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_saleorder_pc_builder" inherit_id="sale.report_saleorder_document">
        <xpath expr="//span[@t-field='line.price_unit']" position="replace">
            <t t-if="'(Bajo pedido)' not in (line.name or '')">
                <span t-field="line.price_unit"/>
            </t>
            <span t-else="" class="pc-builder-pending-price">Por definir</span>
        </xpath>
        <xpath expr="//span[@t-field='line.price_subtotal']" position="replace">
            <t t-if="'(Bajo pedido)' not in (line.name or '')">
                <span t-field="line.price_subtotal"/>
            </t>
            <span t-else="" class="pc-builder-pending-price">Por definir</span>
        </xpath>
    </template>
</odoo>
