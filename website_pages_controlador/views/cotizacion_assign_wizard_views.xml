<odoo>
    <record id="view_cotizacion_assign_wizard_form" model="ir.ui.view">
        <field name="name">cotizacion.assign.wizard.form</field>
        <field name="model">cotizacion.assign.wizard</field>
        <field name="arch" type="xml">
            <form string="Asignar vendedor">
                <group>
                    <field name="cotizacion_id" invisible="1"/>
                    <field name="user_id" domain="[('share', '=', False)]"/>
                </group>
                <footer>
                    <button name="action_assign" string="Asignar vendedor" type="object" class="btn-primary"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
